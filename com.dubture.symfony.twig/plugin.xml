<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="com.dubture.twig.core.completionStrategyResolvers">
      <resolver
            class="com.dubture.symfony.twig.codeassist.TwigCompletionStrategyFactory">
      </resolver>
   </extension>
   <extension
         point="org.eclipse.ui.editors.templates">
      <include
            file="templates/twigdefault-templates.xml"
            translations="templates/twigdefault-templates.properties">
      </include>
   </extension>
   <extension
         point="com.dubture.twig.core.completionContextResolvers">
      <resolver
            class="com.dubture.symfony.twig.codeassist.TwigCompletionContextResolver">
      </resolver>
   </extension>
   <extension
         id="id2"
         point="org.eclipse.dltk.ui.scriptCompletionProposalComputer">
      <scriptCompletionProposalComputer
            categoryId="org.eclipse.dltk.ui.scriptTypeProposalCategory"
            class="com.dubture.symfony.ui.contentassist.SymfonyCompletionProposalComputer"
            toolkitId="org.eclipse.php.core.PHPNature">
         <partition
               type="com.dubture.twig.TWIG_DEFAULT">
         </partition>
      </scriptCompletionProposalComputer>
   </extension>
   <extension
         point="com.dubture.symfony.ui.projectWizardExtension">
      <wizardextension
            class="com.dubture.symfony.twig.ui.TwigProjectWizardExtension">
      </wizardextension>
   </extension>
   <extension
         point="com.dubture.twig.ui.templateProvider">
      <templateProvider
            class="com.dubture.symfony.twig.ui.TemplateProvider">
      </templateProvider>
   </extension>
   <extension
         point="com.dubture.twig.ui.completionProposalProvider">
      <proposalProvider
            class="com.dubture.symfony.twig.codeassist.CompletionProposalProvider">
      </proposalProvider>
   </extension>
   
 <extension
       point="org.eclipse.ui.handlers">
    <handler
          class="com.dubture.symfony.ui.actions.InsertRouteHandler"
          commandId="com.dubture.symfony.twig.command.insertRoute">
       <activeWhen>
          <reference
                definitionId="com.dubture.ui.twigContentType.definition">
          </reference>
       </activeWhen>
       <enabledWhen>
          <reference
                definitionId="com.dubture.ui.twigContentType.definition">
          </reference>
       </enabledWhen>
    </handler>
 </extension>
 <extension
       point="org.eclipse.ui.menus">
    <menuContribution
          allPopups="false"
          locationURI="menu:sourceMenuId?before=sourceBegin">
       <command
             commandId="com.dubture.symfony.twig.command.insertRoute"
             label="Insert route"
             style="push">
          <visibleWhen
                checkEnabled="false">
             <reference
                   definitionId="com.dubture.ui.twigContentType.definition">
             </reference>
          </visibleWhen>
       </command>
    </menuContribution>
 </extension>
 <extension
       point="org.eclipse.ui.commands">
  <command
        categoryId="org.eclipse.ui.category.edit"
        description="Insert a routename at the current cursor position"
        id="com.dubture.symfony.twig.command.insertRoute"
        name="Insert Route">
  </command>
       
 </extension>
   

</plugin>
