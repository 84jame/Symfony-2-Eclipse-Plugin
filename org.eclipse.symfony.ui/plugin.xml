<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.eclipse.symfony.ui.addnature"
            objectClass="org.eclipse.core.resources.IProject">
         <menu
               id="org.eclipse.symfony.ui.menu1"
               label="%menu.label"
               path="additions">
            <separator
                  name="project">
            </separator>
         </menu>
         <action
               class="org.eclipse.symfony.ui.popup.actions.AddSymfonyNature"
               enablesFor="1"
               id="org.eclipse.symfony.ui.newAction"
               label="%action.label"
               menubarPath="org.eclipse.symfony.ui.menu1/project">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="org.eclipse.symfony.ui.debugModel"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="org.eclipse.symfony.ui.popup.actions.DebugModelAction"
               enablesFor="1"
               id="org.eclipse.symfony.ui.debugmodelaction"
               label="%action.label.0"
               menubarPath="org.eclipse.symfony.ui.menu1/project">
         </action>
      </objectContribution>
   </extension>

 <extension
       point="org.eclipse.ui.preferencePages">
    <page
          class="org.eclipse.symfony.ui.preferences.SymfonyPreferencePage"
          id="org.eclipse.symfony.ui.preferences.SymfonyPreferencePage"
          name="%page.name">
    </page>
    <page
          category="org.eclipse.symfony.ui.preferences.SymfonyPreferencePage"
          class="org.eclipse.symfony.ui.preferences.ServicesPreferencePage"
          id="org.eclipse.symfony.ui.page1"
          name="%Services">
    </page>
 </extension>
 
 <extension
       point="org.eclipse.ui.views">
    <category
          id="org.eclipse.symfony.ui"
          name="%category.name">
    </category>
 </extension>
 
 <extension
       point="org.eclipse.help.contexts">
    <contexts
          file="contexts.xml">
    </contexts>
 </extension>
 
 
 <extension
       point="org.eclipse.ui.workbench.texteditor.hyperlinkDetectors">
    <hyperlinkDetector
          activate="true"
          class="org.eclipse.symfony.ui.editor.hyperlink.SymfonyHyperlinkDetector"
          id="org.eclipse.symfony.ui.hyperlinkDetector"
          name="%hyperlinkDetector.name"
          targetId="org.eclipse.php.core.phpsource">
    </hyperlinkDetector>
 </extension>
 
 
 <extension
       point="org.eclipse.wst.sse.ui.semanticHighlighting">
        <highlighting
          class="org.eclipse.symfony.ui.editor.highlighting.AnnotationHighlighting"
          target="org.eclipse.php.core.phpsource">
        </highlighting> 
 </extension>
 <extension
       point="org.eclipse.ui.propertyPages">
    <page
          class="org.eclipse.symfony.ui.preferences.ServicesPreferencePage"
          id="org.eclipse.symfony.ui.servicePreferencePage"
          name="%servicesPreferencePage">
       <enabledWhen>
          <adapt
                type="org.eclipse.core.resources.IProject">
          </adapt>
       </enabledWhen>
       <filter
             name="nature"
             value="org.eclipse.symfony.core.symfonyNature">
       </filter>
    </page>
 </extension>
 <extension
       point="org.eclipse.core.runtime.preferences">
    <initializer
          class="org.eclipse.symfony.ui.preferences.SymfonyPreferenceInitializer">
    </initializer>
 </extension>
 
</plugin>
